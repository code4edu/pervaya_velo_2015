<!DOCTYPE html>
<html ng-app="App">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course work tracking system</title>
    @Styles.Render("~/css")

</head>
<body ng-controller="MainCtrl">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
				<span class="pr"  ui-sref-active="active">
					<a class="navbar-brand" ui-sref="home">Course work tracking system</a>

				</span>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
					<li ui-sref-active="active">
						<a ui-sref="about" class="cp">О нас</a>
					</li>
					<li ui-sref-active="active" ng-show="role === 'Admin'">
						<a ui-sref="users" class="cp">Пользователи</a>
					</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" accordion>
        @RenderBody()
    </div>

    @Scripts.Render("~/js")
    @RenderSection("scripts", required: false)
</body>
</html>
